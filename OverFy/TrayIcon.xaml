<Window x:Class="OverFy.TrayIcon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:OverFy"
        mc:Ignorable="d"
        Title="NotifyIcon" Height="300" Width="300" FontFamily="Segoe UI Light" FontSize="14">
    <Grid>
        <tb:TaskbarIcon ToolTipText="OverFy" x:Name="icon" TrayMouseDoubleClick="icon_TrayMouseDoubleClick">
            <!--IconSource="/HueHue;component/HueHue.ico"-->
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu >
                    <MenuItem Header="Show" Click="MenuItem_Click" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>